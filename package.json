{
  "name": "brewlog",
  "private": true,
  "version": "3.0.0",
  "description": "Brewlog app Javasript tooling",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/zgoda/brewlog.git"
  },
  "eslintConfig": {
    "extends": [
      "preact"
    ],
    "ignorePatterns": [
      "build/",
      "dist/"
    ],
    "rules": {
      "max-len": [
        "error",
        88,
        2
      ],
      "quotes": [
        "error",
        "single"
      ],
      "semi": [
        "error",
        "always",
        {
          "omitLastInOneLineBlock": true
        }
      ],
      "object-curly-spacing": [
        "error",
        "always"
      ]
    }
  },
  "keywords": [
    "brewlog",
    "homebrewing"
  ],
  "author": "Jarek Zgoda",
  "license": "BSD-3-Clause",
  "devDependencies": {
    "@babel/core": "^7.13.10",
    "@babel/plugin-transform-react-jsx": "^7.12.17",
    "@babel/preset-env": "^7.13.10",
    "@rollup/plugin-babel": "^5.3.0",
    "@rollup/plugin-commonjs": "^17.1.0",
    "@rollup/plugin-node-resolve": "^11.2.0",
    "clean-css-cli": "^5.2.1",
    "eslint": "^7.22.0",
    "eslint-config-preact": "^1.1.3",
    "rollup": "^2.41.5",
    "rollup-plugin-terser": "^7.0.2"
  },
  "dependencies": {
    "preact": "^10.5.13"
  }
}
